{
  "name": "web-printer",
  "version": "1.2.0",
  "description": "웹에서 호출되는 로컬 인쇄 프로그램",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "build": "npm run sync-version && electron-builder",
    "build-win": "npm run sync-version && electron-builder --win --publish=never",
    "build-mac": "npm run sync-version && electron-builder --mac --publish=never",
    "pack": "npm run sync-version && electron-builder --dir",
    "build-signed": "npm run sync-version && electron-builder --publish=never",
    "build-signed-mac": "npm run sync-version && electron-builder --mac --publish=never",
    "build-signed-win": "npm run sync-version && electron-builder --win --publish=never",
    "sync-version": "node -e \"const fs=require('fs'),{execSync}=require('child_process');try{const tag=execSync('git describe --tags --abbrev=0',{encoding:'utf8'}).trim().replace('v','');const pkg=JSON.parse(fs.readFileSync('package.json'));pkg.version=tag;fs.writeFileSync('package.json',JSON.stringify(pkg,null,2));console.log('✅ Version synced to:',tag);}catch(e){console.log('⚠️ Using current version (no git tags found)');}\"",
    "version-info": "node -e \"console.log('Package version:', require('./package.json').version); try { console.log('Latest git tag:', require('child_process').execSync('git describe --tags --abbrev=0', {encoding: 'utf8'}).trim()); } catch(e) { console.log('No git tags found'); }\"",
    "publish": "electron-builder --publish=always",
    "build-self-signed-mac": "chmod +x scripts/create-mac-cert.sh && ./scripts/create-mac-cert.sh",
    "build-self-signed-win": "powershell -ExecutionPolicy Bypass -File scripts/create-win-cert.ps1"
  },
  "keywords": [
    "electron",
    "printing",
    "web",
    "protocol-handler"
  ],
  "author": "Sierra",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "electron-updater": "^6.1.4"
  },
  "build": {
    "appId": "com.webprinter.app",
    "productName": "WebPrinter",
    "directories": {
      "output": "dist"
    },
    "protocols": [
      {
        "name": "WebPrinter Protocol",
        "schemes": [
          "webprinter"
        ]
      }
    ],
    "files": [
      "main.js",
      "preload.js",
      "print-preview.html",
      "print-preview.js",
      "web-example.html",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "forceCodeSigning": false
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "code-x-team",
      "repo": "webprint-electron"
    }
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}