{
  "name": "web-printer",
  "version": "1.4.9",
  "description": "웹에서 호출되는 로컬 인쇄 프로그램",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "npm run sync-version && electron-builder",
    "build-win": "npm run sync-version && electron-builder --win --publish=never",
    "build-mac": "npm run sync-version && electron-builder --mac --publish=never",
    "sync-version": "node -e \"const fs=require('fs'),{execSync}=require('child_process');try{const tag=execSync('git describe --tags --abbrev=0',{encoding:'utf8'}).trim().replace('v','');const pkg=JSON.parse(fs.readFileSync('package.json'));const currentVersion=pkg.version;console.log('🏷️ Git 태그 버전:',tag);console.log('📦 현재 package.json 버전:',currentVersion);if(currentVersion!==tag){pkg.version=tag;fs.writeFileSync('package.json',JSON.stringify(pkg,null,2));console.log('✅ 버전 동기화 완료:',currentVersion,'→',tag);}else{console.log('✅ 버전이 이미 동일함 - 업데이트 불필요');}}catch(e){console.log('⚠️ Git 태그를 찾을 수 없어 현재 버전 유지');console.log('💡 새 태그 생성: git tag v1.x.x && git push origin v1.x.x');}\"",
    "publish": "electron-builder --publish=always"
  },
  "keywords": [
    "electron",
    "printing",
    "web",
    "protocol-handler"
  ],
  "author": "Sierra",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "electron-updater": "^6.1.4"
  },
  "build": {
    "appId": "com.webprinter.app",
    "productName": "WebPrinter",
    "directories": {
      "output": "dist"
    },
    "protocols": [
      {
        "name": "WebPrinter Protocol",
        "schemes": [
          "webprinter"
        ]
      }
    ],
    "files": [
      "main.js",
      "preload.js",
      "print-preview.html",
      "print-preview.js",
      "web-example.html",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "forceCodeSigning": false
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": true,
      "warningsAsErrors": false,
      "deleteAppDataOnUninstall": true,
      "allowElevation": true,
      "perMachine": false,
      "runAfterFinish": false,
      "displayLanguageSelector": false,
      "language": "1042",
      "installerLanguages": ["ko-KR", "en-US"],
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "include": "installer.nsh",
      "script": "installer.nsh",
      "uninstallDisplayName": "WebPrinter 제거",
      "shortcutName": "WebPrinter"
    },
    "publish": {
      "provider": "github",
      "owner": "code-x-team",
      "repo": "webprint-electron"
    }
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}