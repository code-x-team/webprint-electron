{
  "name": "web-printer",
  "version": "1.9.4",
  "description": "웹에서 호출되는 로컬 인쇄 프로그램",
  "main": "main.js",
  "scripts": {
    "start": "electron . --js-flags=\"--expose-gc\"",
    "test": "node test/basic.test.js",
    "lint": "echo \"No linting configured\"",
    "prepare": "node scripts/prepare.js",
    "build": "npm run prepare && electron-builder",
    "build-win": "npm run prepare && electron-builder --win",
    "build-mac": "npm run prepare && electron-builder --mac",
    "build-all": "npm run build-mac && npm run build-win",
    "build-all-parallel": "npm run prepare && electron-builder -mw",
    "publish": "npm run prepare && electron-builder --publish=always"
  },
  "keywords": [
    "electron",
    "printing",
    "web",
    "protocol-handler"
  ],
  "author": "Sierra",
  "license": "MIT",
  "homepage": "https://github.com/code-x-team/webprint-electron",
  "repository": {
    "type": "git",
    "url": "https://github.com/code-x-team/webprint-electron.git"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "pdfjs-dist": "^5.4.54"
  },
  "build": {
    "appId": "com.webprinter.app",
    "productName": "WebPrinter",
    "directories": {
      "output": "dist"
    },
    "protocols": [
      {
        "name": "WebPrinter Protocol",
        "schemes": [
          "webprinter"
        ]
      }
    ],
    "asar": false,
    "files": [
      "main.js",
      "preload.js",
      "print-preview.html",
      "modules/**/*",
      "styles/**/*",
      "renderer/**/*",
      "example/**/*",
      "assets/icon*.png",
      "assets/icon*.ico",
      "package.json",
      "node_modules/**/*",
      "!node_modules/**/test/**",
      "!node_modules/**/tests/**",
      "!node_modules/**/spec/**",
      "!node_modules/**/docs/**",
      "!node_modules/**/example/**",
      "!node_modules/**/examples/**",
      "!node_modules/**/benchmark/**",
      "!node_modules/**/benchmarks/**",
      "!node_modules/**/*.md",
      "!node_modules/**/README*",
      "!node_modules/**/CHANGELOG*",
      "!node_modules/**/LICENSE*",
      "!node_modules/**/HISTORY*",
      "!node_modules/**/*.txt",
      "!node_modules/**/.github/**",
      "!node_modules/**/.nyc_output/**",
      "!node_modules/**/coverage/**",
      "!dist",
      "!test",
      "!scripts"
    ],
    "asarUnpack": [
      "node_modules/express/**/*",
      "node_modules/cors/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "icon*.png",
          "icon*.ico"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64",
            "universal"
          ]
        }
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": "nsis",
      "publisherName": "WebPrinter Team",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "electronDownload": {
      "cache": "./electron-cache"
    },
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true,
      "allowElevation": true,
      "perMachine": false,
      "displayLanguageSelector": false,
      "language": "1042",
      "include": "installer.nsh",
      "uninstallDisplayName": "WebPrinter 제거",
      "shortcutName": "WebPrinter",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "menuCategory": "Utilities",
      "installerLanguages": [
        "ko_KR",
        "en_US"
      ],
      "warningsAsErrors": false
    },
    "dmg": {
      "title": "${productName} ${version}",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "publish": {
      "provider": "github",
      "owner": "code-x-team",
      "repo": "webprint-electron",
      "releaseType": "release",
      "publishAutoUpdate": true
    }
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
